<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="view_webhook_server_form">
            <field name="name">webhook.server.form</field>
            <field name="model">webhook.server</field>
            <field name="inherit_id" ref="juragan_webhook.view_webhook_server_form"/>
            <field name="arch" type="xml">
                <header>
                    <button type="object" name="open_warehouse_config_wizard" string="Config Warehouse" />
                </header>
                <page position="before">
                    <page string="Marketplace Account">
                        <img class="mp-account-img" src="/juragan_product/static/src/img/tp.png" alt="" />
                        <h4 class="mp-account-label">Tokopedia</h4>
                        <field name="mp_tokopedia_ids">
                            <tree editable="bottom">
                                <field name="shop_name" readonly="1"/>
                                <field name="name" readonly="1"/>
                                <field name="partner_id"/>
                                <field name="company_id"/>
                                <field name="wh_config" readonly="1"/>
                                <!-- <field name="sync_stock_active" readonly="1"/> -->
                                <field name="wh_id" readonly="1" groups="base.group_no_one"/>
                                <field name="wh_shop_id" readonly="1" groups="base.group_no_one"/>
                                <field name="wh_main_id" readonly="1" groups="base.group_no_one"/>
                                <field name="company_id" groups="base.group_multi_company"
                                       options="{'no_create': True}"/>
                            </tree>
                        </field>
                        <br/>
                        <br/>
                        <img class="mp-account-img" src="/juragan_product/static/src/img/shp.png" alt="" />
                        <h4 class="mp-account-label">Shopee</h4>
                        <field name="mp_shopee_ids">
                            <tree editable="bottom">
                                <field name="shop_name" readonly="1"/>
                                <field name="name" readonly="1"/>
                                <field name="partner_id"/>
                                <field name="company_id"/>
                                <field name="wh_config" readonly="1"/>
                                <!-- <field name="sync_stock_active" readonly="1"/> -->
                                <field name="wh_id" readonly="1" groups="base.group_no_one"/>
                                <field name="wh_shop_id" readonly="1" groups="base.group_no_one"/>
                                <field name="wh_main_id" readonly="1" groups="base.group_no_one"/>
                                <field name="company_id" groups="base.group_multi_company"
                                       options="{'no_create': True}"/>
                            </tree>
                        </field>
                        <br/>
                        <br/>
                        <img class="mp-account-img" src="/juragan_product/static/src/img/lz.png" alt="" />
                        <h4 class="mp-account-label">Lazada</h4>
                        <field name="mp_lazada_ids">
                            <tree editable="bottom">
                                <field name="seller_name" readonly="1"/>
                                <field name="name" readonly="1"/>
                                <field name="partner_id"/>
                                <field name="wh_config" readonly="1"/>
                                <!-- <field name="sync_stock_active" readonly="1"/> -->
                                <field name="wh_id" readonly="1" groups="base.group_no_one"/>
                                <field name="wh_shop_id" readonly="1" groups="base.group_no_one"/>
                                <field name="wh_main_id" readonly="1" groups="base.group_no_one"/>
                                <field name="company_id" groups="base.group_multi_company"
                                       options="{'no_create': True}"/>
                            </tree>
                        </field>
                        <br/>
                        <br/>
                        <img class="mp-account-img" src="/juragan_product/static/src/img/bli.png" alt="" />
                        <h4 class="mp-account-label">Blibli</h4>
                        <field name="mp_blibli_ids">
                            <tree editable="bottom">
                                <field name="shop_name" readonly="1"/>
                                <field name="name" readonly="1"/>
                                <field name="partner_id"/>
                                <field name="company_id"/>
                                <field name="wh_config" readonly="1"/>
                                <field name="sync_stock_active" readonly="1"/>
                                <field name="wh_id" readonly="1" groups="base.group_no_one"/>
                                <field name="wh_shop_id" readonly="1" groups="base.group_no_one"/>
                                <field name="wh_main_id" readonly="1" groups="base.group_no_one"/>
                                <field name="company_id" groups="base.group_multi_company"
                                       options="{'no_create': True}"/>
                            </tree>
                        </field>
                    </page>
                    <page string="Data Mapping">
						<button class="btn-izi" type="object" name="start_company_mapping" string="Map Company" />
                        <field name="company_mapping_ids">
                            <tree editable="bottom" delete="0" create="0">
                                <field name="company_id" string="Company" domain="[('izi_id', '=', False)]"/>
                                <field name="reference" string="Reference" readonly="1"/>
                            </tree>
                        </field>
                        <br/>
						<button class="btn-izi" type="object" name="start_warehouse_mapping" string="Map Warehouse" />
                        <field name="warehouse_mapping_ids">
                            <tree editable="bottom" delete="0" create="0">
                                <field name="warehouse_id" string="Warehouse" domain="[('izi_id', '=', False)]"/>
                                <field name="reference" string="Reference" readonly="1"/>
                            </tree>
                        </field>
                        <br/>
						<button class="btn-izi" type="object" name="start_product_mapping" string="Map Product" />
						<button class="btn-izi-danger" type="object" name="delete_product_mapping" string="Delete" icon="fa-trash" />
                        <field name="product_mapping_ids">
                            <tree editable="bottom" delete="0" create="0">
                                <field name="product_product_izi_id" string="IZIID" readonly="1"/>
                                <field name="reference" string="Marketplace Product" readonly="1"/>
                                <field name="product_id" string="Odoo Product" domain="[('izi_id', '=', False)]"/>
                                <field name="order_product_id" string="Product in Order"/>
                            </tree>
                        </field>
                        <!-- TODO: Comment out Location Mapping -->
						<!-- <button type="object" name="start_location_mapping" string="Start Location Mapping" />
                        <field name="location_mapping_ids">
                            <tree editable="bottom" delete="0" create="0">
                                <field name="location_id" string="Location" domain="[('usage', '=', 'internal')]"/>
                                <field name="reference" string="Reference" readonly="1"/>
                            </tree>
                        </field>
                        <br/> -->
                    </page>
                </page>
            </field>
        </record>
    </data>
</odoo>